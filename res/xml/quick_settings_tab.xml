<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/quick_settings_title"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/qstiles_category_title">

    <Preference
        android:key="quicksettings"
        android:fragment="org.candyroms.candycane.settings.fragments.QuickSettings"
        android:title="@string/qstiles_layout_title"
        android:summary="@string/qstiles_layout_summary" />

    <org.candyroms.candycane.settings.preference.SecureSettingSwitchPreference
        android:key="qs_easy_toggle"
        android:title="@string/qs_easy_toggle_title"
        android:summary="@string/qs_easy_toggle_summary"
        android:defaultValue="false" />

    <org.candyroms.candycane.settings.preference.SystemSettingSwitchPreference
        android:key="quick_settings_vibrate"
        android:title="@string/quick_settings_vibrate_title"
        android:summary="@string/quick_settings_vibrate_summary"
        android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_omnijaws_category">

    <PreferenceScreen
        android:title="@string/weather_config_title"
        android:summary="@string/weather_config_summary" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.omnijaws"
                android:targetClass="org.omnirom.omnijaws.SettingsActivityService" />
    </PreferenceScreen>

    <ListPreference
        android:key="weather_icon_pack"
        android:title="@string/weather_icon_pack_title"
        android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/custom_header_category_title">

    <org.candyroms.candycane.settings.preference.SystemSettingSwitchPreference
        android:key="status_bar_custom_header"
        android:title="@string/status_bar_custom_header_title"
        android:summary="@string/status_bar_custom_header_summary"
        android:defaultValue="false" />
 
    <ListPreference
        android:key="custom_header_provider"
        android:title="@string/custom_header_provider_title"
        android:summary="@string/custom_header_provider_summary"
        android:persistent="false"
        android:entries="@array/custom_header_provider_entries"
        android:entryValues="@array/custom_header_provider_values"
        android:dependency="status_bar_custom_header" />
 
    <ListPreference
        android:key="daylight_header_pack"
        android:title="@string/daylight_header_pack_title"
        android:summary="@string/daylight_header_pack_summary"
        android:persistent="false"
        android:dependency="status_bar_custom_header"/>
 
    <org.candyroms.candycane.settings.preference.CustomSeekBarPreference
        android:key="status_bar_custom_header_shadow"
        android:title="@string/status_bar_custom_header_shadow_title"
        android:summary="@string/status_bar_custom_header_shadow_summary"
        android:max="255"
        settings:min="0"
        settings:units=""
        android:persistent="false"
        android:dependency="status_bar_custom_header" />
 
    <PreferenceScreen
        android:key="custom_header_browse"
        android:title="@string/custom_header_browse_title"
        android:summary="@string/custom_header_browse_summary"
        android:dependency="status_bar_custom_header"
        android:persistent="false" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.omnistyle"
                android:targetClass="org.omnirom.omnistyle.BrowseHeaderActivity" />
    </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_header_category_title">

    <org.candyroms.candycane.settings.preference.SecureSettingSwitchPreference
        android:key="qs_show_brightness"
        android:title="@string/qs_brightness_slider_title"
        android:summary="@string/qs_brightness_slider_summary"
        android:defaultValue="true"/>

    <org.candyroms.candycane.settings.preference.SystemSettingSwitchPreference
        android:key="qs_show_brightness_icon"
        android:title="@string/brightness_icon_title"
        android:summary="@string/brightness_icon_summary"
        android:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>
